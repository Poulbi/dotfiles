# bind common v player-stop
# 
# bind common ] vol +0 +1%
# bind common [ vol +1% +0
# bind common + vol +10%
# bind common = vol +10%
# bind common } vol -0 -1%
# bind common { vol -1% -0
# bind common - vol -10%
# 
bind -f common , seek -5
bind -f common . seek +5
bind -f common 0 vol +2%
bind -f common 9 vol -2%
